---
interface Props {
  href: string;
  samePage?: boolean;
}

const { href, samePage } = Astro.props;
---

<a class={`group flex flex-col`} href={samePage ? href : `#${href}`}>
  <span
    class="text-xs sm:text-l font-bold uppercase tracking-widest group-hover:text-slate-200 transition-colors duration-200 group-focus-visible:text-slate-200"
  >
    <slot />
  </span>
  <span
    class={`h-px mt-1 w-8 transition-all duration-200 ${"w-8 bg-slate-600 group-hover:w-12 group-hover:bg-slate-200"}`}
  ></span>
</a>
