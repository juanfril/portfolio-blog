---
import Tags from "./Tags.astro";

interface Props {
  title: string;
  date?: string;
  tags: string[];
  link?: string;
  notAvailableReason?: string;
}

const { title, date, tags, link, notAvailableReason } = Astro.props;
---

<a
  href={link ?? "#"}
  target="_blank"
  rel="noopener noreferrer"
  class="flex flex-col p-4 mb-4 border-none rounded-2xl hover:bg-slate-800/30 hover:scale-105 duration-200"
>
  <p class="text-gray-500 mb-4">{date}</p>
  <h2 class="text-2xl font-bold mb-4">{title}</h2>
  <p class="mb-4">
    <slot />
  </p>
  {!link && <p class="text-amber-400 mb-4">{notAvailableReason}</p>}
  <section class="flex flex-wrap gap-2 pt-4">
    {
      tags.map((tag) => {
        return <Tags tag={tag} />;
      })
    }
  </section>
</a>
